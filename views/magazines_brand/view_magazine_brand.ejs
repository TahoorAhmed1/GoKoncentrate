<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <a href="/admin/magazines_brand"><i class="fas fa-arrow-left"></i></a>
                                <h4> <span class="text-semibold"></span>Magazine Brand Detail</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Magazine Brands</li>
                                <li class="active">View</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>
                    
                    <div class="content">
                        <div class="panel panel-flat">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="b">Image</td>
                                            <td><img src="<%= magazine_brand.image == '' || magazine_brand.image == null || magazine_brand.image == '/images/users/' ? '/white_user.jpg' : magazine_brand.image%>" width="100" height="100" class="img-circle"></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Name</td>
                                            <td><%= magazine_brand.name %></span></td>
                                        </tr>
                                        <!-- <% for( var i = 0; i < magazines.length; i++ ){%>
                                            <tr>
                                                <td><img src="<%= magazines[i].image == '' || magazines[i].image == null || magazines[i].image == '/images/users/' ? '/white_user.jpg' : magazines[i].image%>" width="30" height="30" class="img-circle"></td>
                                                <td><%= magazines[i].name%></td>
                                            </tr>
                                        <%}%> -->   
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <h3 style="margin-left: 500px;">Magazines of this Brand</h3>
                        <div class="panel panel-flat">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Magazine Picture</th>
                                            <th>Magazine Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(total_magazines > 0 ){%>
                                        <% for( var i = 0; i < magazines.length; i++ ){%>
                                            <tr>
                                                <td> <%= i+1%></td>
                                                <td><img src="<%= magazines[i].image == '' || magazines[i].image == null || magazines[i].image == '/images/users/' ? '/white_user.jpg' : magazines[i].image%>" width="30" height="30" class="img-circle"></td>
                                                <td><%= magazines[i].name%></td>
                                            </tr>
                                        <%}} else {%>
                                            <tr>
                                                <td>No Magazines of this brand.</td>
                                            </tr>
                                            <%}%>  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

    </body>

</html>