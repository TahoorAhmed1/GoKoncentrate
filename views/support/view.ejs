<!DOCTYPE html>
<html lang="en">

<% include ../admin_header.ejs %>

<body>

    <% include ../admin_navbar.ejs %>

    <div class="page-container">
        <div class="page-content">

            <% include ../sidebar.ejs %>

            <div class="content-wrapper">
                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        <div class="page-title">
                            <a href="/admin/billing_section"><i class="fas fa-arrow-left"></i></a>
                            <h4> <span class="text-semibold"></span>Billing Details</h4>
                        </div>

                        <div class="heading-elements">
                            <div class="heading-btn-group">

                            </div>
                        </div>
                    </div>

                    <div class="breadcrumb-line">
                        <ul class="breadcrumb">
                            <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                            <li class="active">Billing</li>
                            <li class="active">View</li>
                        </ul>

                        <ul class="breadcrumb-elements">

                        </ul>
                    </div>
                </div>

                <div class="content">
                    <div class="panel panel-flat">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                 
                                    <tr>
                                        <td class="b">Name</td>
                                        <td><%= response.userName %></span></td>
                                    </tr>
                                    <tr>
                                        <td class="b">Magazine Brand Name</td>
                                        <td><%= response.magazineBrandName %></span></td>
                                    </tr>
                                    <tr>
                                        <td class="b">Plan Type</td>
                                        <%if(response.planType=1){%>
                                        <td>Monthly</td>
                                        <%}else{%>
                                            <td>Weekly</td>
                                            <%}%>
                                    </tr>
                                    <tr>
                                        <td class="b">Status</td>
                                     
                                        <%if(response.status==0){%>
                                        <td>Pending</td>
                                        <%}else if(response.status==1){%>
                                        <td>Accepted</td>
                                        <%}else{%>
                                            <td>Rejected</td>
                                            <%}%>
                                       
                                        </tr>
                                        <tr>
                                            <td class="b">Payment Type</td>
                                         
                                            <%if(response.paymentType==0){%>
                                            <td>Credit Card</td>
                                            <%}else if(response.paymentType==1){%>
                                            <td>Debit Card</td>
                                            <%}%>
                                           
                                            </tr>
                                            <tr>
                                                <td class="b">Card Number</td>
                                             
                                               
                                                <td><%=response.cardNumber%></td>
                                                
                                               
                                                </tr>

                                            <tr>
                                                <td class="b">Next Payment Date</td>
                                             
                                               
                                                <td><%=response.nextPaymentDate%></td>
                                                
                                               
                                                </tr>

                                         
                                    </tbody>
                                </table>
                            </div>
                        </div>
                       
                        <% include ../admin_footer.ejs %>

                        </div>

                    </div>
                </div>
            </div>

</body>

</html>