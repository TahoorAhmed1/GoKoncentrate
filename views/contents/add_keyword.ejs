<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <style>
        .error{
            color: red;
            padding-bottom: 10px;
            font-size: 14px;
        }
    </style>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4> <span class="text-semibold"></span>Add Keyword</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">General Settings</li>
                                <li class="active">Default Keywords</li>
                                <li class="active">Add</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>
                    
                    <div class="content">
                        <form action = '/admin/save_keyword'  enctype="multipart/form-data"  method="POST" role="form" id="add_user_form" onsubmit="document.getElementById('sb').disabled = true;">
                            <div class="panel panel-flat">
                                <div class="panel-body">

                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Keyword:</label>
                                        <div class="col-lg-9 input-group">
                                        <span class="input-group-addon"><i class="fas fa-edit"></i></span>
                                        <input type="text" name="keyword" class="form-control" placeholder="Enter keyword" required>
                                        </div>
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-9"><label id="keyword-error" class="error" for="keyword"></label></div>
                                    </div>

                                    <!-- <div class="form-group">
                                        <label class="col-lg-3 control-label">Image:</label>
                                        <div class="col-lg-2">
                                            <img src="/default.jpg" width="100" height="100" id="image" class="img-circle">
                                        </div>
                                        <div class="col-lg-7">
                                            <input type="file" name="image" class="file-styled" id="files" accept="image/*" required>
                                            <div class="col-lg-9"><label id="files-error" class="error" for="files"></label></div>
                                        </div>
                                    </div> -->
    
                                    <div class="text-right">
                                        <button type="submit" class="btn btn-primary" id="sb">Submit <i class="icon-arrow-right14 position-right"></i></button>
                                    </div>
                                </div>
                                
                            </div>
                        </form>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

        <style>
            .control-label{
                font-weight: 600;
            }
            .img-circle {
                object-fit: cover;
            }
        </style>

        <script>
            document.getElementById("files").onchange = function () {
                var reader = new FileReader();

                reader.onload = function (e) {
                    // get loaded data and render thumbnail.
                    document.getElementById("image").src = e.target.result;
                };

                // read the image file as a data URL.
                reader.readAsDataURL(this.files[0]);
            };
        </script>

        <script>
            $(document).click(function(e) {
                $("#sb").prop("disabled", false);
            })
        </script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

        <script>
            $(document).ready(function() {
                $("#add_user_form").validate({
                    rules: {
                        keyword: {
                            required: true,
                            maxlength: 255
                        }
                    },
                    messages: {
                        keyword: {
                            required: "This field is required",
                            maxlength: "Maximum length 255 characters",
                        }
                    }
                });
            })
        </script>

    </body>

</html>