<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>
    
    <script src="https://cdn.ckeditor.com/4.9.2/full-all/ckeditor.js"></script>

    <body>
        <% if(msg != '') { %>
            <div class="alert alert-success msg" style="position: absolute; z-index: 9999; right: 10px; top: 10px;"><span style="font-size: 16px;"><%= msg %></span></div> <%
        } %>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4> <span class="text-semibold"></span>Call Us Email</h4>
                            </div>
    
                            <div class="heading-elements">
                                <!-- <a href="/admin/add_category" class="btn btn-primary">Add</a> -->
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Pages</li>
                                <li class="active">Call us</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>

                    <div class="content">
                        <div class="panel panel-flat">

                            <div class="panel-heading">
                                <h5 class="panel-title">Edit Call Us Email</h5>
                            </div>

                            <div class="panel-body">
                                <form action = "/admin/update_call_us" method = "POST" id="call_us_form">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Email:</label>
                                        <div class="col-lg-10 input-group">
                                        <span class="input-group-addon"><i class="fas fa-envelope"></i></span>
                                        <input type="email" name="call_us" class="form-control" placeholder="Enter your email" value="<%= response.content %>" required>
                                        </div>
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-10"><label id="call_us-error" class="error" for="call_us"></label></div>
                                    </div>
                        
                                    <div class="text-right">
                                        <button type="submit" class="btn bg-teal-400">Submit <i class="icon-arrow-right14 position-right"></i></button>
                                    </div>
                                </form>
                            </div>
                            
                        </div>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

        <script>
            $(document).ready(function() {
                $("#call_us_form").validate({
                    rules: {
                        call_us: {
                            required: true,
                            maxlength: 50,
                            email: true
                        }
                    },
                    messages: {
                        call_us: {
                            required: "This field is required",
                            maxlength: "Maximum length 50 characters",
                            email: "Enter a valid email address"
                        }
                    }
                });
            })
        </script>

        <style>
            .control-label{
                font-weight: 600;
            }
            .error{
                color: red;
                padding-bottom: 10px;
                font-size: 14px;
            }
        </style>

    </body>

</html>