<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4> <span class="text-semibold">Block listing</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    <!-- <a href="/admin/add_user" class="btn btn-primary">Add</a> -->
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Block List</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>

                    <div class="content">
                        <div class="panel panel-flat">

                            <table class="table datatable-basic table-bordered" id="myTable">
                                <thead>
                                    <tr>
                                        <th class="b">S.No.</th>
                                        <th class="b">Blocked By</th>
                                        <th class="b">Blocked To</th>
                                        <th class="b">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%
                                        for (var i in response) { %>
                                            <tr>
                                                <td><%= parseInt(i)+1 %></td>
                                                <td><a href="/admin/view_user/<%= response[i].from.id %>" target="_blank"><%= response[i].from.name %></a></td>
                                                <td><a href="/admin/view_user/<%= response[i].to.id %>" target="_blank"><%= response[i].to.name %></a></td>
                                                <td class="text-center">
                                                    <ul class="icons-list">
                                                        <li class="dropdown">
                                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                                <i class="icon-menu9"></i>
                                                            </a>
                        
                                                            <ul class="dropdown-menu dropdown-menu-right">
                                                                <li>
                                                                    <a href="/admin/view_block_detail/<%=response[i].id%>"><i class="fas fa-eye"></i>View</a>
                                                                </li>
                                                            </ul>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr> <%
                                        }
                                    %>
                                </tbody>
                            </table>
                        </div>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

        <style>
            .badge{
                padding: 2px 8px 2px 8px;
                font-size: 14px;
            }
            img{
                object-fit: cover;
            }
            .postCount, .crowdCount, .engageCount {
                font-size: 14px;
                padding: 0px 6px 0px 6px;
            }
            .fa-arrow-circle-right {
                padding-left: 4px;
            }
            .userName {
                color: blue;
                font-weight: 800;
            }
        </style>

    </body>

</html>