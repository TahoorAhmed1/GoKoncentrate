<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <style>
        .left_table, .right_table {
            width: 50%;
            float: left;
        }
        .blocked {
            text-align: center;
            font-weight: 600;
            margin-top: 0px;
            margin-bottom: 0px;
            background: #00eeff;
        }
    </style>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4> <span class="text-semibold"></span>Block Detail</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li><a href="/admin/blocks">Block List</a></li>
                                <li class="active">View</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>
                    
                    <div class="content">
                        <div class="panel panel-flat left_table">
                            <h4 class="blocked">Blocked By</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="b">Profile Pic</td>
                                            <td><img src="<%= response.from.profilePic == '' ? '/white_user.jpg' : '/images/users/'+response.from.profilePic %>" width="100" height="100" class="img-circle"></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Name</td>
                                            <td><%= response.from.name %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Username</td>
                                            <td><%= response.from.username %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Email</td>
                                            <td><%= response.from.email %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Date Of Birth</td>
                                            <td><%= response.from.dob %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Bio</td>
                                            <td><%= response.from.bio %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="panel panel-flat right_table">
                            <h4 class="blocked">Blocked To</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="b">Profile Pic</td>
                                            <td><img src="<%= response.to.profilePic == '' ? '/white_user.jpg' : '/images/users/'+response.to.profilePic %>" width="100" height="100" class="img-circle"></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Name</td>
                                            <td><%= response.to.name %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Username</td>
                                            <td><%= response.to.username %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Email</td>
                                            <td><%= response.to.email %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Date Of Birth</td>
                                            <td><%= response.to.dob %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Bio</td>
                                            <td><%= response.to.bio %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

    </body>

</html>