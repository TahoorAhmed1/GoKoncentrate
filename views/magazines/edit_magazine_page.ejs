<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>
    
    <!-- <script src="https://cdn.ckeditor.com/4.9.2/full-all/ckeditor.js"></script> -->

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <body>
        <% if(msg != '') { %>
            <div class="alert alert-success msg" style="position: absolute; z-index: 9999; right: 10px; top: 10px;"><span style="font-size: 16px;"><%= msg %></span></div> <%
        } %>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <a href="javascript:void(0)" class="oldPage"><i class="fas fa-arrow-left"></i></a>
                                <h4> <span class="text-semibold"></span>Edit Magazine Page</h4>
                            </div>
    
                            <div class="heading-elements">
                                <!-- <a href="/admin/add_category" class="btn btn-primary">Add</a> -->
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Magazine Management</li>
                                <li class="active">Edit Magazine Page</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>

                    <div class="content">
                        <div class="panel panel-flat">

                            <div class="panel-heading">
                                <h5 class="panel-title">Edit Magazine Page</h5>
                            </div>

                            <div class="panel-body">
                                <form action = "/admin/update_page" method = "POST" onsubmit="return check(this)">
                                    <div class="content-group">
                                        <textarea name="magazine_page" id="editor" rows="4" cols="4">
                                            <%= response.content %>
                                        </textarea>
                                    </div>
                        
                                    <input type="hidden" name="page_id" value="<%= response.id%>">

                                    <div class="text-right">
                                        <button type="submit" class="btn btn-primary">Submit <i class="icon-arrow-right14 position-right"></i></button>
                                    </div>
                                </form>
                            </div>
                            
                        </div>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>
        <script>
            function check(form){
                if (form.editor.value.trim() == ""){
                    //document.getElementById('add_page_error').style.display = 'block';
                    alert("Please enter some content in page !")
                    return false;
                } 
            }
        </script>
        <script>
            $(".oldPage").click(function(){
                window.history.back();
            })
        </script>
        <script>
           // CKEDITOR.replace('editor');
           $(document).ready(function() {
            $('#editor').summernote('code');
          });
            //document.getElementById("editor").disabled = true;
        </script>

    </body>

</html>