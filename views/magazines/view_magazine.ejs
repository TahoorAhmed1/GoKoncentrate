<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <a href="/admin/magazines"><i class="fas fa-arrow-left"></i></a>
                                <h4> <span class="text-semibold"></span>Magazine Detail</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Magazine Management</li>
                                <li class="active">View</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>
                    
                    <div class="content">
                        <div class="panel panel-flat">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="b">Image</td>
                                            <td><img src="<%= magazine.image == '' || magazine.image == null || magazine.image == '/images/users/' ? '/white_user.jpg' : magazine.image%>" width="100" height="100" class="img-circle"></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Name</td>
                                            <td><%= magazine.name %></span></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Magazine Brand</td>
                                            <td><%= brand_name%></td>
                                        </tr>
                                         
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <h3 style="margin-left: 500px;">View Magazine Pages Content</h3>
                        <div class="panel panel-flat">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Page No</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(pages.length > 0 ){%>
                                            <% for( var i = 0; i < pages.length; i++ ){%>
                                                <tr>
                                                    <td><%= i+1%></td>
                                                    <td><%= pages[i].page_no %></td>
                                                    <td class="text-center">
                                                        <ul class="icons-list">
                                                            <li class="dropdown">
                                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                                    <i class="icon-menu9"></i>
                                                                </a>
                            
                                                                <ul class="dropdown-menu dropdown-menu-right">
                                                                    <li>
                                                                        <a href="/admin/view_page/<%=pages[i].id%>"><i class="fas fa-view"></i>View</a>
                                                                    </li>
                                                                </ul>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            <%}%>
                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

    </body>

</html>