<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <script src="https://cdn.ckeditor.com/4.9.2/full-all/ckeditor.js"></script>

    <style>
        .error{
            color: red;
            padding-bottom: 10px;
            font-size: 14px;
        }
    </style>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4> <span class="text-semibold"></span>Send email</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Help</li>
                                <li class="active">Send email</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>
                    
                    <div class="content">
                        <form action = '/admin/save_help_email'  enctype="multipart/form-data"  method="POST" role="form" id="send_email_form">
                            <div class="panel panel-flat">
                                <div class="panel-body">

                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Email:</label>
                                        <div class="col-lg-9 input-group">
                                        <span class="input-group-addon"><i class="fas fa-envelope"></i></span>
                                        <input type="email" name="email" class="form-control" placeholder="Enter email" required>
                                        </div>
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-9"><label id="email-error" class="error" for="email"></label></div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Subject of email:</label>
                                        <div class="col-lg-9 input-group">
                                        <span class="input-group-addon"><i class="fas fa-edit"></i></span>
                                        <input type="text" name="subject" class="form-control" placeholder="Enter subject" required>
                                        </div>
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-9"><label id="subject-error" class="error" for="subject"></label></div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Select priority:</label>
                                        <div class="col-lg-9 input-group">
                                        <span class="input-group-addon"><i class="fas fa-edit"></i></span>
                                            <select class="form-control" name="priority" required>
                                                <option value="">Select priority</option>
                                                <option value="low">Low</option>
                                                <option value="medium">Medium</option>
                                                <option value="high">High</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-9"><label id="priority-error" class="error" for="priority"></label></div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-12 control-label">Message:</label>
                                        <div class="col-lg-12 input-group">
                                        <span class="input-group-addon"><i class="fas fa-edit"></i></span>
                                        <textarea name="message" id="editor" rows="4" cols="4" required></textarea>
                                        </div>
                                        <div class="col-lg-12"><label id="message-error" class="error" for="message"></label></div>
                                    </div>
    
                                    <div class="text-right">
                                        <button type="submit" class="btn btn-primary">Submit <i class="icon-arrow-right14 position-right"></i></button>
                                    </div>
                                </div>
                                
                            </div>
                        </form>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

        <script>
            CKEDITOR.replace('editor');
        </script>

        <style>
            .control-label{
                font-weight: 600;
            }
            .btn.btn-primary{
                margin-top: 70px;
            }
            .img-circle {
                object-fit: cover;
            }
        </style>

        <script>
            document.getElementById("files").onchange = function () {
                var reader = new FileReader();

                reader.onload = function (e) {
                    // get loaded data and render thumbnail.
                    document.getElementById("image").src = e.target.result;
                };

                // read the image file as a data URL.
                reader.readAsDataURL(this.files[0]);
            };
        </script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

        <script>
            $(document).ready(function() {
                $("#send_email_form").validate({
                    rules: {
                        email: {
                            required: true,
                            email: true,
                            maxlength: 50
                        },
                        subject: {
                            required: true,
                            maxlength: 200
                        },
                        priority: {
                            required: true
                        },
                        message: {
                            required: true
                        }
                    },
                    messages: {
                        email: {
                            required: "This field is required",
                            email: "Please enter a valid email address",
                            maxlength: "Maximum length 50 characters",
                        },
                        subject: {
                            required: "This field is required",
                            maxlength: "Maximum length 200 characters",
                        },
                        priority: {
                            required: "This field is required"
                        },
                        message: {
                            required: "This field is required"
                        }
                    }
                });
            })
        </script>

    </body>

</html>