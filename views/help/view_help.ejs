<!DOCTYPE html>
<html lang="en">

    <% include ../admin_header.ejs %>

    <body>

        <% include ../admin_navbar.ejs %>

        <div class="page-container">
            <div class="page-content">
    
                <% include ../sidebar.ejs %>
    
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4> <span class="text-semibold"></span>Email Details</h4>
                            </div>
    
                            <div class="heading-elements">
                                <div class="heading-btn-group">
                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="/admin/dashboard"><i class="icon-home2 position-left"></i> Home</a></li>
                                <li class="active">Help</li>
                                <li class="active">View</li>
                            </ul>
    
                            <ul class="breadcrumb-elements">
                                
                            </ul>
                        </div>
                    </div>
                    
                    <div class="content">
                        <div class="panel panel-flat">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="b">Email</td>
                                            <td><%= response.email %></span></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Subject</td>
                                            <td><%= response.subject %></span></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Priority</td>
                                            <td>
                                                <%
                                                    if(response.priority == "low") { %>
                                                        <span class="label label-info">LOW</span> <%
                                                    } else if (response.priority == "medium") { %>
                                                        <span class="label label-success">MEDIUM</span> <%
                                                    } else if(response.priority == "high") { %>
                                                        <span class="label label-warning">HIGH</span> <%
                                                    } else {

                                                    }
                                                %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="b">Message</td>
                                            <td><%- response.message %></td>
                                        </tr>
                                        <tr>
                                            <td class="b">Date</td>
                                            <td>
                                                <%
                                                    let fullDate = new Date(response.createdAt);
                                                    let date = fullDate.getDate();
                                                    let month = fullDate.getMonth() + 1;
                                                    let year = fullDate.getFullYear();
                                                    let hour = fullDate.getHours();
                                                    let minute = fullDate.getMinutes();

                                                    let ampm = hour >= 12 ? 'PM' : 'AM';
                                                    hour = hour % 12;
                                                    hour = hour ? hour : 12;

                                                    if(date < 10) { date = '0'+date }
                                                    if(month < 10) { month = '0'+month }
                                                    if(hour < 10) { hour = '0'+hour }
                                                    if(minute < 10) { minute = '0'+minute }
                                                %>
                                                <%= date+'/'+month+'/'+year %>
                                                <br>
                                                <%= hour+':'+minute+' '+ampm %>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <% include ../admin_footer.ejs %>

                    </div>
                    
                </div>
            </div>
        </div>

    </body>

</html>